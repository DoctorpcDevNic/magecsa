verde = #60b05c
amarillo = #e9e966
azul = #44b4c8
verdetran = rgba(96, 176, 92, .75)
azultran = rgba(68, 180, 200, .9)

@font-face {
    font-family: Junction;
    src: url('../fonts/Junction-webfont.ttf');    
}

body
	font-family Junction
	font-size 18px
	margin 0
	padding 0
.bold
	font-weight bold
.slidermain
	margin-top 51px
	position relative
	transition all 1s ease
	img	
		width 100%
		
	.camera_caption
		div
			background azultran
			font-family Junction
			font-size 18px
			padding 5px
			text-align center
.logo
	position absolute
	top 50px
	img
		width 30%
		
.carousel-control.right
.carousel-control.left
	background-image none
.navbar-default .navbar-nav>.open>a
.navbar-default .navbar-nav>.open>a:hover
	background-color transparent	
.navbar-default
	border-color transparent	
	.navbar-toggle
		border-color transparent
		&:hover
			background-color transparent	
	.navbar-collapse
		border-color transparent	
		padding 0	
.navbar-nav
	margin 0	
.nav .open>a
.nav .open>a:hover
.nav .open>a:focus	
	background-color transparent	

.menumain
	background verdetran
	left 0
	position fixed
	right 0
	top 0
	transition all 1s ease
	z-index 99
	
	ul
		li
			&:hover
				background amarillo
				
				a
					color  black !important
			a
				color white !important
				font-size 18px
				text-align center
				&:hover
					background amarillo
			.submenu 
				background-color azultran !important	
				padding 0 !important
				li
					a
						color white !important
						font-size 16px
						&:hover
						&:focus
						&:active
							color black !important						
								
			
.infomain
	hr
		border-top 3px solid azul
		margin 10px 0
	.menuother
		.row
			margin 0
			.col-md-3
			.col-xs-3
				margin 20px 0 0 0					
				
				a
					color verde
					text-decoration none

				h2
					font-size 14px	
					margin 0
					text-align center
					
	.divider
		padding 1em	0	
	
	.vacante
		h2
			background azul
			color white
			margin 0 0 1em 0
			padding 5px 10px
			width 155px
		.camera_caption
			div
				background rgba(0, 0, 0, .75)
				font-size 18px
				padding 5px
				text-align center
		.camera_wrap 
			img
				width 100% !important
				margin-left 0 !important
						
		.logo_slider
			position absolute
			top 20px
			left 13px	
			img
				width 20% !important	
		.infovacante
			.fecha
				font-size 18px	
				position absolute
				right 14px
				top 8px
		
			.descripcion							
				bottom 30px
				font-size 10px
				position absolute
				text-align center
				left 25%
				p
					padding 0
					margin 0
				.aplican
					font-weight bold	
	.ubicacion
		.titul
			color verde	
			font-size 22px	
			margin-top 30px
			text-align center
	.nosotros
		position relative
		.encabezado
			color white
			background azul
			border 10px solid amarillo
			text-align center
			padding 10px
		.titul		
			color azul
			text-align center
			line-height 16px
			border-bottom 4px solid amarillo
			span
				color verde
				font-size 14px
		.quienes
			img
				width 100%	
		.mision	
			img
				width 100%		
		.valores
			img
				width 100%			
			
			
				
	.contacto
		width 70%
		margin 0 auto
		.titul
			padding 1em
			color verde
			border-bottom 2px solid azul
		form	
			margin-top 2em
			textarea
				resize none	
			label
				color verde			

.clear
	clear both	
	
.mapa
	height 300px			
	width 100%
			
